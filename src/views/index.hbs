<div class="row">
    <div class="col-md-4">
        <form action="/send-sms" method="post" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Write your message" autofocus />
            </div>
            <div class="form-group">
                <input type="tel" name="phone" class="form-control" placeholder="+523451232321" autocomplete="off" />
            </div>
            <button class="btn btn-primary">SEND</button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}

        <ul class="list-group" id="messages">
            {{#each messages}}
            <li class="list-group-item list-group-info list-group-item-action">
                <p>Message: {{body}}</p>
                <span>from: {{from }}</span>
                <span>to: {{to}}</span><br>
                <span>type: {{type}}</span><br>
                <span>{{timeago createdAt}}</span>
            </li>
            {{/each}}
        </ul>

        {{else}}
        <p>No messages yet</p>
        {{/if}}
    </div>
</div>